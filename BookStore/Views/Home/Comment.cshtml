<div id="Comments" >
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="page-header">
                    <h1>Comments</h1>
                </div>
                <div class="comments-list">
                    <div class="media" v-for="com in comments">
                        <div class="media-body">
                            @foreach (var comment in Model.Comments)
                            {
                                <div class="row">
                                    <h5 style="padding-left: 10px" class="media-heading user_name">@comment.UserName : </h5>
                                    <h5>@comment.Message</h5>
                                </div>
                                <h6>@comment.createTime</h6>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <textarea rows="3" placeholder="Your Comment" id="Comment" class="form-control"></textarea>
        <input id="SendComment" value="Send" type="button" class="btn btn-outline-dark" />
    </div>
</div>