@model BookStore.DAL.Models.Person
<html>
<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
          integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>
<body class="bg-light ">
    <div class="row bg-secondary align-items-start" style="margin-left : 0">
        <h2>Registration</h2>
    </div>
    <div class="col-md-3" style=" padding-top : 10; padding-left : 10">
        @Html.TextBoxFor(model => model.FirstName, htmlAttributes : new { @class = "form-control", @placeholder = "Enter First Name*"})
    </div>
    <div class="col-md-3" style=" padding-top: 10; padding-left : 10">
        @Html.TextBoxFor(model => model.SecondName, htmlAttributes : new { @class = "form-control", @placeholder = "Enter Second Name*"})
    </div>
    <div class="col-md-3" style=" padding-top: 10; padding-left : 10">
        @Html.TextBoxFor(model => model.Age, htmlAttributes : new { @class = "form-control", @placeholder = "Enter Age*"})
    </div>
    <div class="col-md-3" style=" padding-top: 10; padding-left : 10">
        @Html.TextBoxFor(model => model.Login, htmlAttributes : new { @class = "form-control", @placeholder = "Enter Login*" })
    </div>
    <div class="col-md-3" style=" padding-top: 10; padding-left : 10">
        @Html.TextBoxFor(model => model.Password, htmlAttributes : new { @class = "form-control", @placeholder = "Enter Password*" })
    </div>
    <div class="row">
        @using (Html.BeginForm("Registration", "Home", FormMethod.Post))
        {
            <div class="col-auto" style=" padding-top: 30; padding-left : 20">
                <button class="btn btn-secondary" type="submit">Register</button>
            </div>
        }
        @using (Html.BeginForm("Login", "Home", FormMethod.Post))
        {
            <div class="col-auto" style=" padding-top: 30">
                <button class="btn btn-secondary" type="submit">Back</button>
            </div>
        }
    </div>
    @if (TempData["noticeRegistration"] != null)
    {
        <p style="padding-left : 10; color : red">
            @TempData["noticeRegistration"]
        </p>
    }
</body>
</html>