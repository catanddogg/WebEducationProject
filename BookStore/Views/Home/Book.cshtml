@using BookStore.DAL.Enums
<html>
<head>
</head>
<body>
    <div>
        <div class="row align-items-center bg-info marginLeftNull">
            <h2>Create Book</h2>
        </div>
    </div>
    <div class="col-md-2 Padding10px">
        <input placeholder="Book name" id="Name" class="form-control" />
    </div>
    <div class="col-md-2 Padding10px">
        <input placeholder="Avtor" id="Avtor" class="form-control" />
    </div>
    <div class="col-md-2 Padding10px">
        <input placeholder="Publisher" id="Publisher" class="form-control" />
    </div>
    <div class="col-md-2 Padding10px">
        @Html.DropDownList("Genre1", Html.GetEnumSelectList(typeof(CategoryType)), htmlAttributes: new { @class = "btn btn-light  dropdown-toggle" })
    </div>
    <div class="col-md-2 Padding10px">
        @Html.DropDownList("Genre2", Html.GetEnumSelectList(typeof(CategoryType)), htmlAttributes: new { @class = "btn btn-light  dropdown-toggle" })
    </div>
    <div class="col-md-2">
        <input id="file" type="file" class="form-control" />
    </div>
    <div class="Padding10px">
        <input id="SaveFile" type="submit" value="Save" class="btn btn-secondary" />
    </div>
    <div class="bookPaddingLeft">
        <input id="NavigationToIndex" type="submit" value="Back" class="btn btn-secondary" />
    </div>

    <div class="modal fade" id="bookModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="bookModalTitle" />
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <h4 class="modal-title" id="bookModalBody" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
