@model BookStore.DAL.Models.Person
<html>
<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
          integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>
<body class="bg-light">
    @using (Html.BeginForm("Swagger", "Home", FormMethod.Post))
    {
        <div class="row bg-secondary align-items-start align-items-center" style="margin-left : 0">
            <div class="col">
                <h1>Login, Please</h1>
            </div>
            <div class="col-auto ">
                <button class="btn btn-secondary">Swagger</button>
            </div>
        </div>
    }
    @using (Html.BeginForm("Login", "Home", FormMethod.Post))
    {
        <div class="col-md-2" style=" padding: 10px">
            @Html.TextBoxFor(model => model.Login, htmlAttributes : new { @class = "form-control", @placeholder = "Login" })
        </div>
        <div class="col-md-2" style=" padding: 10px">
            @Html.TextBoxFor(model => model.Password, htmlAttributes :  new { @class = "form-control", @placeholder = "Password" })
        </div>
        <div style=" padding: 10px">
            <button class="col-md-1 btn btn-secondary" type="submit">Login</button>
        </div>
    }
    @using (Html.BeginForm("Registration", "Home", FormMethod.Post))
    {
        <div style=" padding: 10px">
            <button class="col-md-1 btn btn-secondary" type="submit">Registration</button>
        </div>
    }
    @if (TempData["noticeLogin"] != null)
    {
        <p style="padding-left : 10px; color : red">
            @TempData["noticeLogin"]
        </p>
    }
</body>
</html>