@model BookStore.DAL.Models.CategoriesBooksAvtors
@using BookStore.DAL.Enums
<html>
<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
          integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous" />
</head>
<body class="bg-light">
        <div class="row align-items-center bg-info ">
            <div class="col-auto">
                <h2>List Books</h2>
            </div>
            <div class="col-auto ">
                @Html.DropDownList("typeTable", Html.GetEnumSelectList(typeof(TypeTable)), htmlAttributes: new { @id = "typeTable", @class = "btn btn-secondary  dropdown-toggle" })
            </div>
            <div class="col-auto">
                <input id="RefreshTable" value="Send" type="button" class="btn btn-outline-dark" />
            </div>
            @using (Html.BeginForm("Book", "Home", FormMethod.Post, htmlAttributes: new { @style = "margin : -16" }))
            {
                <div class="col-auto">
                    <input value="Create Book" type="submit" class="btn btn-outline-dark" />
                </div>
            }
        </div>
@{ await Html.RenderPartialAsync("Tables");}
@{await Html.RenderPartialAsync("Comment");}
</body>
</html>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="~/js/index.js"></script>